<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_drawer_header_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/navigation_header_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_margin="4dp"
        android:src="@mipmap/ic_logo"

        />

    <LinearLayout
        android:id="@+id/navigation_header_user_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/navigation_header_logo"
        android:orientation="vertical"
        android:paddingStart="@dimen/drawer_header_padding_between"
        android:paddingTop="@dimen/drawer_header_padding_around"
        android:paddingEnd="@dimen/drawer_header_padding_around"
        android:paddingBottom="@dimen/drawer_header_padding_around">

        <TextView
            android:id="@+id/navigation_header_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:shadowColor="@color/black"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_header_username_textsize"
            android:textStyle="bold" />

        <Button
            android:id="@+id/navigation_header_defaultDepartment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:drawablePadding="@dimen/button_padding_between"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>